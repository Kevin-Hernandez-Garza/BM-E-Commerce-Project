<div class="container">
        <div class="row my-3 shadow-sm">
                <div class="col-md-6 col-sm-12">
                        <div class="card">
                                <img src={{product.photo}} class="card-img-top" alt="...">
                        </div>
                </div>
                <div class="col-md-6 col-sm-12 px-2 my-sm-2 my-md-0">
                        <div class="card text-danger h-100 text-dark text-sm-center text-md-start">
                                <div class="card-body d-flex align-items-center justify-content-center">
                                        <div>
                                                <h5 class="card-title">{{product.product_name}}</h5>
                                                <p class="card-text">{{product.description}}</p>
                                                <p class="card-text">PRICE: ${{product.price}}</p>
                                                <p class="card-text text-muted">STOCK: {{product.stock}}</p>
                                                <button class="btn btn-primary btn-block px-5">ADD TO CART</button>
                                        </div>
                                </div>
                        </div>
                </div>
        </div>
</div>

<div class="container">
        <div class="row py-3 col">
                <h5 class="bg-primary text-white py-1">Reviews</h5>
                <h5 class="bg-danger text-white py-1">For future development!</h5>
        </div>
</div>